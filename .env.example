# Instagram Configuration
INSTAGRAM_SESSION_ID=your_session_id_here
INSTAGRAM_USERNAME=your_username_here

# Messaging Configuration
DEFAULT_MESSAGE=Hello! This is an automated message.
DEFAULT_DELAY_SECONDS=60
MAX_DAILY_MESSAGES=50
MAX_HOURLY_MESSAGES=10
MAX_USERS_PER_RUN=100

# Proxy Configuration
PROXY_ENABLED=false
PROXY_TYPE=http
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_ROTATION_ENABLED=false

# Browser Configuration
HEADLESS_MODE=true
BROWSER_TYPE=chrome
WINDOW_WIDTH=1920
WINDOW_HEIGHT=1080
USER_AGENT_ROTATION=true
ANTI_DETECTION_ENABLED=true

# Rate Limiting
ENABLE_SMART_DELAYS=true
MIN_DELAY_SECONDS=30
MAX_DELAY_SECONDS=120
PROGRESSIVE_DELAY_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/instagram_dm.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
CONSOLE_LOG_ENABLED=true

# Security
ENCRYPT_SESSION_DATA=true
SESSION_TIMEOUT_HOURS=24
SECURE_MODE=true

# Development
DEBUG_MODE=false
MOCK_INSTAGRAM_API=false
SAVE_SCREENSHOTS=false
SCREENSHOT_DIR=screenshots/
